{
  "name": "@ethereum-tag-service/contracts",
  "description": "Composable content tagging service for Web3",
  "license": "MIT",
  "version": "0.1.0-alpha.1",
  "files": [
    "/dist"
  ],
  "author": "Ethereum Tag Service <team@ets.xyz>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ethereum-tag-service/ets.git",
    "directory": "packages/contracts"
  },
  "keywords": [
    "ets",
    "composable",
    "nft",
    "tagging"
  ],
  "bugs": {
    "url": "https://github.com/ethereum-tag-service/ets/issues"
  },
  "homepage": "https://ets.xyz",
  "scripts": {
    "build": "pnpm build:contracts && pnpm build:package",
    "prepublishOnly": "pnpm build",
    "coverage": "hardhat coverage",
    "build:contracts": "pnpm compile",
    "build:package": "rm -rf ./dist && cp -R config dist && cp -R artifacts/contracts dist/artifacts && cp -R contracts dist",
    "hardhat": "hardhat node --no-deploy",
    "compile": "hardhat clean && hardhat compile",
    "watch": "ts-node scripts/watch.ts",
    "test": "hardhat test",
    "deploy": "hardhat deploy --tags deployAll --network localhost",
    "deploy-mumbai": "hardhat deploy --tags deployAll --network mumbai",
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "solhint": "./node_modules/.bin/solhint contracts/*.sol contracts/**/*.sol"
  },
  "devDependencies": {
    "@enzoferey/ethers-error-parser": "^0.2.3",
    "@ethereum-tag-service/tsconfig": "workspace:*",
    "@ethersproject/abstract-signer": "^5.6.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.10",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-truffle5": "^2.0.6",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/hardhat-upgrades": "^1.26.0",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.1.4",
    "chai": "^4.3.4",
    "dotenv": "^16.0.0",
    "ethereum-waffle": "^4.0.10",
    "ethereumjs-util": "^7.1.4",
    "ethers": "5.4.0",
    "hardhat": "^2.14.0",
    "hardhat-abi-exporter": "^2.4.0",
    "hardhat-deploy": "^0.11.29",
    "hardhat-ethernal": "3.1.0",
    "lodash.merge": "^4.6.2",
    "node-watch": "^0.7.2",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "1.1.3",
    "random-words": "^1.1.1",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "solidity-docgen": "0.6.0-beta.35",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.2",
    "@openzeppelin/contracts-upgradeable": "^4.9.2"
  }
}
