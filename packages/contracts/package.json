{
  "name": "@ethereum-tag-service/contracts",
  "description": "Composable content tagging service for Web3",
  "license": "MIT",
  "version": "0.1.0-alpha.1",
  "type": "commonjs",
  "files": ["/dist"],
  "author": "Ethereum Tag Service <team@ets.xyz>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ethereum-tag-service/ets.git",
    "directory": "packages/contracts"
  },
  "keywords": ["ets", "composable", "nft", "tagging"],
  "bugs": {
    "url": "https://github.com/ethereum-tag-service/ets/issues"
  },
  "homepage": "https://ets.xyz",
  "scripts": {
    "build": "pnpm build:contracts && pnpm build:package",
    "build:contracts": "pnpm compile",
    "build:package": "rm -rf ./dist && cp -R export dist && cp -R artifacts/contracts dist/artifacts && cp -R contracts dist",
    "compile": "hardhat clean && hardhat compile",
    "coverage": "hardhat coverage",
    "deploy": "hardhat deploy --tags deployAll --network localhost --export export/chainConfig/localhost.json",
    "deploy-testnet-production": "hardhat deploy --tags deployAll --network testnet_production --export export/chainConfig/testnet_production.json",
    "deploy-testnet-stage": "hardhat deploy --tags deployAll --network testnet_stage --export export/chainConfig/testnet_stage.json",
    "hardhat": "hardhat node --no-deploy",
    "prepublishOnly": "pnpm build",
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "solhint": "./node_modules/.bin/solhint contracts/*.sol contracts/**/*.sol",
    "test": "hardhat test",
    "test:build": "publint --strict",
    "watch": "ts-node scripts/watch.ts"
  },
  "devDependencies": {
    "@enzoferey/ethers-error-parser": "^0.2.3",
    "@ethereum-tag-service/tsconfig": "workspace:*",
    "@ethersproject/abstract-signer": "^5.6.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.2",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.4.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-truffle5": "^2.0.6",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/hardhat-upgrades": "^2.4.1",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@typechain/ethers-v5": "^11.1.2",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.12.7",
    "axios": "^1.6.2",
    "chai": "^4.3.4",
    "dotenv": "^16.3.1",
    "ethereum-waffle": "^4.0.10",
    "ethereumjs-util": "^7.1.4",
    "ethers": "6.8.1",
    "hardhat": "^2.19.0",
    "hardhat-abi-exporter": "^2.4.0",
    "hardhat-deploy": "^0.11.43",
    "hardhat-ethernal": "3.1.0",
    "lodash.merge": "^4.6.2",
    "node-watch": "^0.7.2",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "1.1.3",
    "random-words": "^1.1.1",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "solidity-docgen": "0.6.0-beta.35",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.2",
    "@openzeppelin/contracts-upgradeable": "^4.9.2"
  }
}
