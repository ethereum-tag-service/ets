{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "hardhat.config.ts",
    "scripts/**/*.ts",
    "test/**/*.ts",
    "tasks/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "files": ["hardhat.config.ts"]
}
