{
  "name": "@ethereum-tag-service/subgraph",
  "version": "1.0.0",
  "scripts": {
    "clean-graph-node": "rm -rf graph-node/data/",
    "remove-graph-node": "cd graph-node && docker-compose down && pnpm clean-graph-node",
    "start-graph-node": "cd scripts && ./start-graph-node.sh",
    "prepare-local": "node scripts/generate-yaml.js --deployment localhost",
    "prepare-mumbai": "node scripts/generate-yaml.js --deployment mumbai",
    "prepare-mumbai-stage": "node scripts/generate-yaml.js --deployment mumbai_stage",
    "codegen": "graph codegen --output-dir src/generated",
    "graph-deploy-local": "node scripts/deploy.js --deployment localhost",
    "graph-deploy-mumbai": "node scripts/deploy.js --deployment mumbai",
    "graph-deploy-mumbai-stage": "node scripts/deploy.js --deployment mumbai_stage"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "^0.61.0",
    "@graphprotocol/graph-ts": "^0.31.0"
  },
  "devDependencies": {
    "axios": "^1.6.3",
    "fs-extra": "^11.1.1",
    "handlebars": "^4.7.7",
    "minimist": "^1.2.8"
  }
}
