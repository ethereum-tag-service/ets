{
  "name": "@ethereum-tag-service/monorepo",
  "version": "1.0.0",
  "author": "ETS",
  "private": true,
  "keywords": [
    "ethereum",
    "react",
    "ets",
    "tag",
    "tagging",
    "workspaces",
    "yarn"
  ],
  "scripts": {
    "dev": "rm -rf apps/*/.next && dotenv -- turbo run dev --filter=!@ethereum-tag-service/api --filter=!@ethereum-tag-service/oracle",
    "build": "turbo run build --filter=!@ethereum-tag-service/api",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "api:dev": "cd apps/api && pnpm run dev",
    "api:build": "cd apps/api && pnpm run build",
    "api:start": "cd apps/api && pnpm run start",
    "app:dev": "cd apps/app && wagmi generate && pnpm run dev",
    "app:build": "cd apps/app && pnpm run build",
    "app:start": "cd apps/app && pnpm run start",
    "site:dev": "cd apps/site && pnpm run dev",
    "site:build": "cd apps/site && pnpm run build",
    "site:start": "cd apps/site && pnpm run start",
    "hardhat:start": "cd packages/contracts && pnpm run hardhat",
    "hardhat:build": "cd packages/contracts && pnpm run build",
    "hardhat:deploy": "cd packages/contracts && pnpm run deploy",
    "hardhat:deploy-mumbai": "cd packages/contracts && pnpm run deploy-mumbai",
    "hardhat:compile": "cd packages/contracts && pnpm run compile",
    "hardhat:watch": "cd packages/contracts && pnpm run watch",
    "hardhat:solhint": "cd packages/contracts && pnpm solhint",
    "hardhat:test": "cd packages/contracts && pnpm run hardhat",
    "hardhat:clean": "cd packages/hardhat && pnpm hardhat clean",
    "graph:node-start": "cd packages/subgraph && pnpm run run-graph-node",
    "graph:node-stop": "cd packages/subgraph && pnpm run remove-graph-node",
    "graph:node-clean": "cd packages/subgraph && pnpm run clean-graph-node",
    "graph:deploy-local": "cd packages/subgraph && pnpm graph-deploy-local",
    "graph:deploy-mumbai": "cd packages/subgraph && pnpm graph-deploy-mumbai",
    "graph:deploy-mumbai-stage": "cd packages/subgraph && pnpm graph-deploy-mumbai-stage"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "18.2.12",
      "@types/react-dom": "18.2.5"
    }
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  }
}
